@model Student_Master_Areas.Areas.LOC_Country.Models.LOC_CountryModel;
@{
    string opration = "";
    if (ViewBag.ID > 0)
    {
        opration = "Edit";
    }
    else
    {
        opration = "Add";
    }
}

<div class="row ">
    <div class="col-lg-8 align-items-center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@opration Record</h5>
                <!-- Horizontal Form -->
                <form asp-action ="LOC_CountryAddEdit" asp-area="LOC_Country" asp-controller="LOC_Country" method="POST">
                    @Html.HiddenFor(x => x.CountryID)
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Country Name</label>
                        <div class="col-sm-9">
                            <input asp-for="CountryName" type="text" class="form-control">
                            <span asp-validation-for = "CountryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Country Code</label>
                        <div class="col-sm-9">
                            <input asp-for = "CountryCode" type="text" class="form-control">
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">@opration Record</button>
                        <button asp-action="Cancel" asp-area="LOC_Country" asp-controller="LOC_Country" class="btn btn-primary">Cancel</button>
                    </div>
                </form><!-- End Horizontal Form -->

            </div>
        </div>

    </div>
</div>